<UserControl x:Class="AIS.Warehouse.UI.Views.OperationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Operations}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID товара" Binding="{Binding ItemId}" />
                <DataGridTextColumn Header="ID пользователя" Binding="{Binding UserId}" />
                <DataGridTextColumn Header="Тип" Binding="{Binding OperationType}" />
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" />
                <DataGridTextColumn Header="Дата"  Binding="{Binding OperationDate}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
<Window x:Class="AIS.Warehouse.UI.Views.ItemEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBox Margin="5" Text="{Binding Item.ItemCode}" ToolTip ="Код товара"/>
            <TextBox Margin="5" Text="{Binding Item.Name}" ToolTip ="Название"/>
            <TextBox Margin="5" Text="{Binding Item.Quantity}" ToolTip ="Количество"/>
            <TextBox Margin="5" Text="{Binding Item.Price}" ToolTip ="Цена"/>
            <ComboBox Margin="5" SelectedItem="{Binding Item.CompanyId}" ItemsSource="{Binding Companies}" DisplayMemberPath="Name" SelectedValuePath="Id"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="100" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="Отмена" Width="100" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>

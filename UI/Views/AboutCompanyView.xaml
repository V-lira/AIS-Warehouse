<UserControl x:Class="AIS.Warehouse.UI.Views.AboutCompanyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <ScrollViewer>
            <StackPanel Margin="20">
                <!-- ЗАГОЛОВОК -->
                <TextBlock Text="Информация о компании" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#FF757527"
                           Margin="0,0,0,20"
                           FontFamily="Bodoni MT Black"/>

                <!-- ОСНОВНАЯ КОМПАНИЯ (наша) -->
                <Border Background="Beige" 
                        Padding="15" 
                        CornerRadius="5" 
                        Margin="0,0,0,20"
                        BorderBrush="#FFD0D09E"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Наша компания" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"
                                   FontFamily="Bodoni MT Black"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Название -->
                            <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" 
                                       FontWeight="Bold" Margin="0,0,10,5"/>
                            <TextBlock Text="{Binding CompanyName}" Grid.Row="0" Grid.Column="1" 
                                       Margin="0,0,0,5"/>

                            <!-- Адрес -->
                            <TextBlock Text="Адрес:" Grid.Row="1" Grid.Column="0" 
                                       FontWeight="Bold" Margin="0,0,10,5"/>
                            <TextBlock Text="{Binding Address}" Grid.Row="1" Grid.Column="1" 
                                       Margin="0,0,0,5"/>

                            <!-- ИНН -->
                            <TextBlock Text="ИНН:" Grid.Row="2" Grid.Column="0" 
                                       FontWeight="Bold" Margin="0,0,10,5"/>
                            <TextBlock Text="{Binding INN}" Grid.Row="2" Grid.Column="1" 
                                       Margin="0,0,0,5"/>

                            <!-- Телефон -->
                            <TextBlock Text="Телефон:" Grid.Row="3" Grid.Column="0" 
                                       FontWeight="Bold" Margin="0,0,10,5"/>
                            <TextBlock Text="{Binding Phone}" Grid.Row="3" Grid.Column="1" 
                                       Margin="0,0,0,5"/>

                            <!-- Email -->
                            <TextBlock Text="E-mail:" Grid.Row="4" Grid.Column="0" 
                                       FontWeight="Bold" Margin="0,0,10,5"/>
                            <TextBlock Text="{Binding Email}" Grid.Row="4" Grid.Column="1" 
                                       Margin="0,0,0,5"/>
                        </Grid>

                        <!-- Описание (дополнительно) -->
                        <Border Background="#FFF5F5DC" 
                                Padding="10" 
                                CornerRadius="5"
                                Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Описание деятельности:" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Description}" 
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- КОНТАКТНЫЕ ЛИЦА (можно добавить) -->
                <Border Background="#FFF0F0F0" 
                        Padding="15" 
                        CornerRadius="5"
                        BorderBrush="LightGray"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Контактные лица:" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="• Иванов Иван Иванович — директор" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="  Тел.: +7 (495) 100-20-30" 
                                       Margin="0,0,0,10"/>

                            
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
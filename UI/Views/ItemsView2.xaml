<UserControl  x:Class="AIS.Warehouse.UI.Views.ItemsView2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AIS.Warehouse.UI.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Поиск -->
            <RowDefinition Height="*"/>
            <!-- Таблица -->
            <RowDefinition Height="Auto"/>
            <!-- CRUD кнопки -->
        </Grid.RowDefinitions>

        <!-- Поиск -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="200" Margin="5" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     ToolTip ="Поиск по названию или коду"/>
            <Button Content="Сбросить" Command="{Binding ResetSearchCommand}" Margin="5"/>
        </StackPanel>

        <!-- Таблица товаров -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" 
                  SelectedItem="{Binding SelectedItem}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Код" Binding="{Binding ItemCode}"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Компания" Binding="{Binding CompanyName}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- CRUD кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button Content="Добавить" Command="{Binding AddCommand}" Margin="5"/>
            <Button Content="Редактировать" Command="{Binding EditCommand}" Margin="5"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
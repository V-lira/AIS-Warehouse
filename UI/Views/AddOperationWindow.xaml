<Window x:Class="AIS.Warehouse.UI.Views.AddOperationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить операцию" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Товар -->
        <TextBlock Grid.Row="0" Text="Товар:" Margin="0,0,0,5" FontWeight="Bold"/>
        <ComboBox Grid.Row="1" 
                  ItemsSource="{Binding Items}"
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedItem}"
                  Margin="0,0,0,10"
                  Height="25"/>

        <!-- Тип операции -->
        <TextBlock Grid.Row="2" Text="Тип операции:" Margin="0,0,0,5" FontWeight="Bold"/>
        <ComboBox Grid.Row="3" 
                  ItemsSource="{Binding OperationTypes}"
                  SelectedItem="{Binding SelectedOperationType}"
                  Margin="0,0,0,10"
                  Height="25"/>

        <!-- Количество -->
        <TextBlock Grid.Row="4" Text="Количество:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox Grid.Row="5" 
                 Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,20"
                 Height="25">
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding SaveCommand}"/>
            </TextBox.InputBindings>
        </TextBox>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Command="{Binding CancelCommand, Mode=OneTime}" 
                    IsCancel="True"
                    Margin="0,0,5,0"/>
            <Button Content="Сохранить" 
                    Command="{Binding SaveCommand, Mode=OneTime}" 
                    IsDefault="True"
                    Background="#FF0078D7"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
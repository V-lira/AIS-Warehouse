<UserControl x:Class="AIS.Warehouse.UI.Views.OperationsView2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="200" Margin="5" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" ToolTip ="Поиск"/>
            <Button Content="Сбросить" Command="{Binding ResetSearchCommand}" Margin="5"/>
            <Button Content="Добавить операцию" Command="{Binding AddOperationCommand}" Margin="5"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Operations}" AutoGenerateColumns="False" SelectedItem="{Binding SelectedOperation}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Товар" Binding="{Binding ItemName}"/>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding UserName}"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding OperationType}"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding OperationDate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

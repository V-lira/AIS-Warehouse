<UserControl x:Class="AIS.Warehouse.UI.Views.AddItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <Border Padding="20" Background="White">
        <ScrollViewer>
            <StackPanel Width="350">
                <TextBlock Text="Создание нового товара" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" Foreground="#FFB1B163" FontFamily="Bodoni MT Black" TextAlignment="Center"/>
                <TextBlock Text="* - обязательные поля" FontStyle="Italic" Foreground="Gray" TextAlignment="Center"/>
                <TextBlock Text="Название товара*" Foreground="#FFB1B163" FontFamily="Bodoni MT Black"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Height="30"/>
                <TextBlock Text="Артикул (код товара)*" Foreground="#FFB1B163" FontFamily="Bodoni MT Black"/>
                <TextBox Text="{Binding ItemCode, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Height="30"/>
                <TextBlock Text="Цена (руб.)" Foreground="#FFB1B163" FontFamily="Bodoni MT Black"/>
                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Height="30"/>
                <TextBlock Text="ID компании" Foreground="#FFB1B163" FontFamily="Bodoni MT Black"/>
                <TextBox Text="{Binding CompanyId, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,25" Height="30"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Сохранить товар" Height="40" Width="150" Margin="0,0,10,0" Command="{Binding SaveCommand}" Background="#FFD0D09E" FontFamily="Bodoni MT Black" Foreground="#FFB1B163"/>
                    <Button Content="Отмена" Height="40" Width="100" Command="{Binding CancelCommand}" Background="LightGray" FontFamily="Bodoni MT Black"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
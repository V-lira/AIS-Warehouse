<UserControl x:Class="AIS.Warehouse.UI.Views.CompaniesView2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Шапка -->
            <RowDefinition Height="Auto"/>
            <!-- Поиск -->
            <RowDefinition Height="*"/>
            <!-- Таблица -->
            <RowDefinition Height="Auto"/>
            <!-- CRUD -->
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#FFD0D09E" Padding="10">
            <TextBlock Text="Компании-поставщики"
                       FontSize="20"
                       FontFamily="Bodoni MT Black"
                       Foreground="White"/>
        </Border>

        <!-- Поиск -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,10,0,10">
            <TextBox Width="250"
                     Margin="5"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Поиск по названию или ИНН"/>
            <Button Content="Сбросить"
                    Command="{Binding ResetSearchCommand}"
                    Margin="5"/>
        </StackPanel>

        <!-- Таблица -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Companies}"
                  SelectedItem="{Binding SelectedCompany}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                <DataGridTextColumn Header="ИНН" Binding="{Binding INN}" Width="150"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- CRUD кнопки -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="0,10,0,0">
            <Button Content="Добавить" Command="{Binding AddCommand}" Margin="5"/>
            <Button Content="Редактировать" Command="{Binding EditCommand}" Margin="5"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
